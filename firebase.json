{
	"hosting": {
		"public": "dist",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/projects",
				"destination": "/index.html"
			},
			{
				"source": "/resume",
				"destination": "/index.html"
			},
			{
				"source": "/about",
				"destination": "/index.html"
			},
			{
				"source": "/blog",
				"destination": "/index.html"
			},
			{
				"source": "/blog/*",
				"destination": "/index.html"
			}
		],
		"redirects":[
			{
				"regex":"/assets/assets/(.*)",
				"destination":"/assets/:1"
			}
		]
	}
}