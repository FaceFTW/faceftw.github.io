{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-unused-vars": ["warn"],
		"no-console": ["warn"],
		"no-undef": ["warn"],
		"no-constant-condition": ["warn"],
		"prefer-spread": ["error"]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}